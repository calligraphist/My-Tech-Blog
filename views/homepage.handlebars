{{!-- <h1>homepage</h1> --}}
<!-- Loop over each object in the blog array -->
{{#each blogs as |blog| }}
{{!-- --}}
<p>{{blog.title}}</p>
<div class="row mb-4 blog">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/blog/{{blog.id}}">{{blog.title}}</a>
    </h2>
    <p>Created by {{blog.user.name}} on {{format_date blog.createdAt}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blog.text}}
    </p>
     <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment">comment:</label>
        <input class="form-input" type="text" id="comment" title="comment" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
    </form>
     
  </div>

</div>
{{/each}}
